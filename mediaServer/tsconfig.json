{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"strict": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"types": ["node"],
		"sourceMap": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"],
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	}
}
